{{!-- Registrar un usuario --}}
    <div id="username-form" class="container my-2">
        <h1>Ingrese su nombre de usuario</h1>
        <form class="container my-2" action="">
            <div class="form-group row my-2">
                <label class="col-sm-2 col-form-label" for="username">Usuario</label>
                <div class="col-sm-10">
                    <input type="text" id="username" class="form-control" required 
                    {{#if user}}
                        value="{{user.email}}"
                    {{/if}}
                    >
                </div>
            </div>
            <button type="submit" class="btn btn-primary m-4">Unirse al chat</button>
        </form>
    </div>

    
    {{!-- Mostrar los mensajes del chat --}}
    <div id="chat-form" class="container my-2" style="display:none">
        <h1>Sala de chat</h1>
        <div id="chat-messages"></div>
        <form class="container my-5" action="">
            <div class="form-group row my-2">
                <label class="col-sm-2 col-form-label" for="message">Mensaje</label>
                <div class="col-sm-10">
                    <input type="text" id="message" class="form-control">
                </div>
            </div>
            <button type="submit" class="btn btn-primary m-4">Enviar</button>
        </form>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/chat.js"></script>