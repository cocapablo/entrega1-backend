<h1 class="text-center my-5">Carrito 
{{#if user}}
    de {{user.first_name}} {{user.last_name}}
{{/if}}
</h1> 

<input type="hidden" id="idCarrito" value="{{id}}"></input>

<table class="table table-striped">
    <thead class="thead-light">
        <tr>
        <th scope="col"> </th>
        <th scope="col">Nombre</th>
        <th scope="col">Cantidad</th>
        <th scope="col">PU</th>
        <th scope="col">Eliminar</th>
        </tr>
    </thead>
    <tbody>
    {{#each products}}
        <tr>
            <td>
                <img src="{{this.thumbnail}}" alt="{{this.title}}" width="64">
            </td>
            <td>
                {{this.title}}
            </td>
            <td>
                {{this.quantity}}
            </td>
            <td>
                ${{this.price}}
            </td>
            <td>
                <img src="/images/trash3.svg" alt="Eliminar" width="24" onclick="eliminarProducto('{{this.id}}')">
            </td>
        </tr>
      
    {{/each}}
    </tbody>
</table>

<div class="container my-5"></div>
    <div class="row">
        <div id="botones" className="col-md-12">
            <button class="w-15 btn btn-danger" id="btnProductos"><a href="/products?limit=6" class="link-light">Productos</a></button>
            <button class="w-15 btn btn-success" id="btnChat"><a href="/chat" class="link-light" target="_blank">Chatear</a></button>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/cart.js"></script>